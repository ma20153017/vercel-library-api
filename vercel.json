{
  "version": 2,
  "name": "smart-library-api",
  "buildCommand": "echo 'API project - no build needed'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/api",
      "destination": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "MONGODB_URI": "mongodb+srv://smart_library_user:HKLIBRARY@smart-library-cluster.zqou2tr.mongodb.net/?retryWrites=true&w=majority&appName=smart-library-cluster",
    "DB_NAME": "smart_library",
    "NODE_ENV": "production"
  }
} 